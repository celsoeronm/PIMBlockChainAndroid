<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#222431"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bitcoinsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BitCoin:"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/valorbitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.000,00"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/ethereumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ethereum:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/valorEthereum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.500,00"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tetherText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tether:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tetherValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="500,00"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>